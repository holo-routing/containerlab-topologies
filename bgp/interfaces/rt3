auto lo
auto eth1
auto eth2

iface lo inet static
    address 3.3.3.3
    netmask 255.255.255.255

iface lo inet6 static
    address 2001:db8::3
    netmask 128

iface eth1 inet static
    address 10.0.2.3
    netmask 255.255.255.0
    mtu 1500

iface eth2 inet static
    address 172.16.1.3
    netmask 255.255.255.0
    mtu 1500
