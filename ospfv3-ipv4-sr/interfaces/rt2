auto lo
auto eth1
auto eth2
auto eth3

iface lo inet static
    address 2.2.2.2
    netmask 255.255.255.255

iface lo inet6 static
    address fe80::1
    netmask 64

iface eth1 inet static
    address 10.0.1.2
    netmask 255.255.255.0
    mtu 1500

iface eth2 inet static
    address 10.0.2.2
    netmask 255.255.255.0
    mtu 1500

iface eth3 inet static
    address 10.0.3.2
    netmask 255.255.255.0
    mtu 1500
